{% extends 'IVR/base.xml' %}
        {% block content %}

<form id="MainMenu">

    <field name="SouthParkCharacter">
        <audio src="http://159.203.66.200/media/ivr_recordings/00.wav" fetchhint="prefetch" />
<!--<prompt>Welcome to hishab</prompt>-->
        <audio src="http://159.203.66.200/media/ivr_recordings/01.wav" fetchhint="prefetch" />
<!--<prompt>Press one if you are a shopkeeper or two if you are consumer</prompt>-->
        <!-- Define the grammar. -->
        <grammar xml:lang="en-us" root = "myrule" mode="dtmf" >
            <rule id="myrule">
                <one-of>
                    <item> 1 </item>
                    <item> 2 </item>
                </one-of>
            </rule>
        </grammar>

        <!-- The user was silent, restart the field. -->
        <noinput>
            <!-- TODO Have to add bangla voice here -->
            <audio src="http://159.203.66.200/media/ivr_recordings/B-06.wav" fetchhint="prefetch" />
            <!--<prompt>Please repeat</prompt>-->
            <reprompt/>

        </noinput>

        <!-- The user said something that was not defined in our grammar. -->
        <nomatch>
            <!-- TODO Have to add bangla voice here -->
            <audio src="http://159.203.66.200/media/ivr_recordings/B-06.wav" fetchhint="prefetch" />
            <!--<prompt>Please repeat</prompt>-->
            <reprompt/>
        </nomatch>
    </field>

    <!-- Checks the "SouthParkCharacter" value against each of the valid values. -->
    <filled namelist="SouthParkCharacter">
        <if cond="SouthParkCharacter == '1'">
            <goto next="http://159.203.66.200/reg/?session.callerid={{ caller }}&amp;session.calledid={{ calledid }}&amp;caller_type=Consumer&amp;level=1" />
        <elseif cond="SouthParkCharacter == '2'" />
            <goto next="http://159.203.66.200/reg/?session.callerid={{ caller }}&amp;session.calledid={{ calledid }}&amp;caller_type=Shop&amp;level=1" />

        </if>
    </filled>
</form>

        {% endblock %}